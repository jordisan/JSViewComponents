{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "declaration": true,
    "module": "system",
    "outFile": "./wwwroot/js/site.js"
  },
  "exclude": [
    "node_modules",
    "wwwroot",
    "Resources"
  ],
  "include": [
    "./Views/**/*.ts",
    "./Views/**/*.tsx",
    "../JSViewComponents/Resources/JSViewComponents.d.ts"
  ],
  "references": [
    { "path": "../JSViewComponents" }
  ]
}
